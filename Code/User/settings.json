{
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 12,
    "zenMode.fullScreen": false,
    "editor.cursorSurroundingLines": 2,
    "editor.fontFamily": "'Go Mono', 'Droid Sans Mono', 'Courier New', monospace",
    "editor.minimap.enabled": false,
    "editor.mouseWheelScrollSensitivity": 0.33,
    "editor.smoothScrolling": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent",
    "editor.lineNumbers": "off",
    "editor.rulers": [72, 80, 100],
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.associations": {
        "ledger.txt": "ledger",
        "*.erb": "erb",
        "COMMIT_MSG": "git-commit"  // gg commit message
    },
    "telemetry.enableTelemetry": false,
    "githubPullRequests.telemetry.enabled": false,
    "vim.gdefault": true,
    "go.useLanguageServer": true,
    "go.languageServerExperimentalFeatures": {
        "diagnostics": true
    },
    "[go]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "gopls": {
        "usePlaceholders": true
    },
    "ledger.binary": "/usr/bin/ledger",
    "[ledger]": {
        "editor.tabSize": 8,
        "editor.detectIndentation": false,
        "editor.insertSpaces": true
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "window.zoomLevel": 0
}
