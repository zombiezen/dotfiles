{
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.decorations.colors": false,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.defaultBinaryEditor": "hexEditor.hexedit",
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.wrapTabs": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.list.smoothScrolling": true,
    "workbench.sash.size": 8,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 12,
    "window.commandCenter": false,
    "window.newWindowDimensions": "offset",
    "window.openFoldersInNewWindow": "on",
    "window.titleBarStyle": "custom",
    "window.zoomPerWindow": true,
    "chat.commandCenter.enabled": false,
    "zenMode.fullScreen": false,
    "editor.accessibilitySupport": "off",
    "editor.cursorSurroundingLines": 2,
    "editor.fontFamily": "'Go Mono', 'Droid Sans Mono', 'Courier New', monospace",
    "editor.minimap.enabled": false,
    "editor.mouseWheelScrollSensitivity": 0.33,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent",
    "editor.lineNumbers": "off",
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [80, 100],
    "editor.inlayHints.enabled": "offUnlessPressed",
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.shellIntegration.history": 1000,
    "terminal.integrated.tabs.hideCondition": "singleGroup",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.erb": "erb",
        "*.gs": "javascript",
        "*.hcl": "hcl",
        "*.jwcc": "jsonc",
        "*.star": "python",
        "COMMIT_MSG": "git-commit",
        "ledger.txt": "ledger",
        "flake.lock": "json",
    },
    "files.exclude": {
        "**/.direnv": true,
        "**/.redo": true,
        "**/.terraform": true,
        "**/.pc": true
    },
    "telemetry.enableTelemetry": false,
    "githubPullRequests.telemetry.enabled": false,
    "update.showReleaseNotes": false,
    "vim.gdefault": true,
    "vim.handleKeys": {"<C-p>": false},
    "[dart]": {
		// Automatically format code on save and during typing of certain characters
		// (like `;` and `}`).
		"editor.formatOnSave": true,
		"editor.formatOnType": true,

		// Draw a guide line at 80 characters, where Dart's formatting will wrap code.
		"editor.rulers": [80],

		// Disables built-in highlighting of words that match your selection. Without
		// this, all instances of the selected text will be highlighted, interfering
		// with Dart's ability to highlight only exact references to the selected variable.
		"editor.selectionHighlight": false,

		// By default, VS Code will pre-select the most recently used item from code
		// completion. This is usually not the most relevant item.
		//
		// "first" will always select top item
		// "recentlyUsedByPrefix" will filter the recently used items based on the
		//     text immediately preceding where completion was invoked.
		"editor.suggestSelection": "first",

		// Allows pressing <TAB> to complete snippets such as `for` even when the
		// completion list is not visible.
		"editor.tabCompletion": "onlySnippets",

		// By default, VS Code will populate code completion with words found in the
		// matching documents when a language service does not provide its own completions.
		// This results in code completion suggesting words when editing comments and
		// strings. This setting will prevent that.
		"editor.wordBasedSuggestions": "off",
	},
    "diffEditor.renderSideBySide": true,
    "[diff]": {
        "editor.renderWhitespace": "all",
        "editor.trimAutoWhitespace": false,
        "files.insertFinalNewline": false,
        "files.trimTrailingWhitespace": false,
    },
    "go.useLanguageServer": true,
    "go.lintOnSave": "off",
    "go.languageServerExperimentalFeatures": {
        "diagnostics": true
    },
    "go.inlayHints.constantValues": true,
    "go.inlayHints.parameterNames": true,
    "go.vetFlags": [
        "-printf.funcs=zombiezen.com/go/log.Infof,zombiezen.com/go/log.Errorf,zombiezen.com/go/log.Warnf,zombiezen.com/go/log.Debugf"
    ],
    "[go]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never"
        }
    },
    "gopls": {
        "usePlaceholders": true,
        "ui.diagnostic.staticcheck": true,
        "ui.semanticTokens": true
    },
    "hexeditor.columnWidth": 4,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.showDecodedText": true,
    "hexeditor.inspectorType": "sidebar",
    "[html]": {
        // Hides element symbols, since they can get unwieldy with Tailwind class names.
        "breadcrumbs.showFields": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "ledger.binary": "/usr/bin/ledger",
    "[ledger]": {
        "editor.tabSize": 8,
        "editor.detectIndentation": false,
        "editor.insertSpaces": true
    },
    "markdownlint.config": {
        "MD033": false
    },
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": true,
        "editor.insertSpaces": true
    },
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nil",
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "redhat.telemetry.enabled": false,
    "ruby.useLanguageServer": true,
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "terraform.languageServer.enable": true,
    "terraform.languageServer.path": "",
    "terraform.experimentalFeatures.validateOnSave": true,
    "[terraform]": {
        "editor.formatOnSave": true
    },
    "remoteHub.search.download.enabled": true,
    "settingsSync.ignoredSettings": [
        "editor.mouseWheelScrollSensitivity",
        "update.enableWindowsBackgroundUpdates",
        "update.mode",
        "window.titleBarStyle",
        "workbench.editor.wrapTabs",
        "workbench.panel.defaultLocation"
    ],
    "settingsSync.ignoredExtensions": [
        "ban.spellright",
        "foam.foam-vscode",
        "ms-vscode.powershell",
    ],
}
